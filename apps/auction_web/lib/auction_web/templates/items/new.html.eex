<h1>New Item</h1>

<%= form_for @item, Routes.items_path(@conn, :create), fn f ->  %>
  <%= label f, :title %>
  <%= text_input f, :title %>

  <%= label f, :description %>
  <%= text_input f, :description %>

  <%= label f, :ends_at %>
  <%= datetime_select f, :ends_at %>

  <div>
    <%= submit "Submit" %>
  </div>
<% end %>
  
    